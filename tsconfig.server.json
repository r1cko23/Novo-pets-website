{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "server/**/*.ts",
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "server/vite.ts",
    "vite.config.ts"
  ]
} 